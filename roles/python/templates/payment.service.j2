[Unit]
Description=Payment Service

[Service]
User=root
WorkingDirectory={{ app_home }}/payment
Environment=CART_HOST=car-dev.shr-eng.com
Environment=CART_PORT=8080
Environment=USER_HOST=user-dev.shr-eng.com
Environment=USER_PORT=8080
Environment=AMQP_HOST={{ rabbitmq_host }}
Environment=AMQP_USER={{ rabbitmq_admin_user }}
Environment=AMQP_PASS={{ rabbitmq_admin_password }}

ExecStart=/usr/local/bin/uwsgi --ini payment.ini
ExecStop=/bin/kill -9 $MAINPID
SyslogIdentifier=payment

[Install]
WantedBy=multi-user.target 